<% layout('./layouts/boilerplate') %>

<div class="row">   
    
    <div class="col-md-6 mx-auto">
        <%- include('../partials/flash') %>

        <h1 class="display-6 mt-4"  style="color: darkslategrey;"><b style="background-color: yellow;">Login</b></h1>
        <form action="/login" method="POST">
            <div class="mb-3">
                <label class="form-label" for="username">Enter username : </label>
                <input class="form-control" type="text" id="username" name="username" placeholder="Username">
            </div>
            <div >
                <label class="form-label" for="password">Enter Password : </label>
                <input class="form-control" type="password" id="password" name="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-small btn-warning mt-3">Login</button>
            <p class="fw-light mt-3">Don't have a account <a href="/register">Signup</a></p>
        </form>

    </div>

    </div>
    
</body>
</html>